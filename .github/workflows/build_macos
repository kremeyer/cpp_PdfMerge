
name: build macos
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
jobs:
  build:
    runs-on: macos-11.6
    steps:
    - uses: actions/checkout@v2
    # install dependencies
  - name: boost
    uses: MarkusJx/install-boost@v2.0.0
    id: install-boost
    with:
      boost_version: 1.76.0
    # build project
    - name: make build
      run: make

